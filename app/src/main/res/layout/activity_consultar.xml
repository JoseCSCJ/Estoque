<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Controle de Estoque - Consultar"
        android:textSize="20dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editQtd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:hint="Qual quantidade deseja filtrar?"
        android:inputType="numberDecimal"/>

    <Button
        android:onClick="filtroQtd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicar filtro - Quantidade no estoque"/>

    <CheckBox
        android:id="@+id/checkPerec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:hint="Produto perecível" />

    <CheckBox
        android:id="@+id/checkNPerec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:hint="Produto não perecível" />

    <Button
        android:onClick="filtroPerec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicar filtro - Perecibilidade"/>

    <EditText
        android:id="@+id/editVlr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:hint="Qual o maior valor unitário que deseja filtrar?"
        android:inputType="numberDecimal"/>

    <Button
        android:onClick="filtroVlr"
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicar filtro - Valor Unitário"/>

    <ListView
        android:id="@+id/listProduto"
        android:layout_width="379dp"
        android:layout_height="270dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp" />

    <Button
        android:onClick="voltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar para o menu"/>

</LinearLayout>